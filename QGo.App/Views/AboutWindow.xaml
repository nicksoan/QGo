<Window x:Class="QGo.App.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About QGo"
        Width="400" Height="240"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" >
        <Image Source="pack://application:,,,/QGo.App;component/Assets/QGoLogo.png"
           Width="114" Height="107" Margin="0,0,0,10"/>

        <TextBlock Text="QGo — Quick Go Launcher Utility"
               FontWeight="Bold" FontSize="16"
               TextAlignment="Center"/>

        <TextBlock Text="A lightweight shortcut launcher"
               TextAlignment="Center" TextWrapping="Wrap" Width="340"/>

        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
      <Hyperlink NavigateUri="https://github.com/nicksoan/QGo"
                 RequestNavigate="Hyperlink_RequestNavigate">
        View on GitHub
      </Hyperlink>
        </TextBlock>

        <TextBlock Text="© 2025 Nick Soan" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
    </StackPanel>
</Window>