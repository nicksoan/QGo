<Window x:Class="QGo.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Width="420" Height="280" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="12">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Hotkey:" Width="120" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Settings.HotkeyGesture, UpdateSourceTrigger=PropertyChanged}" Width="200" ToolTip="e.g. Alt+Escape or Ctrl+Shift+G"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Background:" Width="120" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Settings.Background}" Width="200" ToolTip="#AARRGGBB or named color"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Foreground:" Width="120" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Settings.Foreground}" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Font size:" Width="120" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Settings.FontSize}" Width="80"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Font family:" Width="120" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Settings.FontFamily}" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Cancel" IsCancel="True" Width="90"/>
            <Button Content="Save" Width="90" Click="Save_Click" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>
