<Window x:Class="QGo.App.Views.ManageShortcutsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Shortcuts" Width="560" Height="420"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Add" Click="Add_Click"/>
            <Button Content="Remove" Click="Remove_Click"/>
            <Separator/>
            <Button Content="Save" Click="Save_Click"/>
        </ToolBar>
        <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Key" Binding="{Binding Key, UpdateSourceTrigger=PropertyChanged}" Width="1*"/>
                <DataGridTextColumn Header="Template" Binding="{Binding Template, UpdateSourceTrigger=PropertyChanged}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
